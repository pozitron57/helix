<%- partial('_partial/head') %>
<body>
  <div class="nfk-container">
    <div class="flex-container">
      <div class="flex-left">
      </div>
      <div class="flex-right">
        <%- partial('_partial/navbar') %>
        <h1><%- page.title %></h1>
      </div>
    </div>

    <div class="flex-container">
      <div class="flex-left">
        <ol class="side-menu">
          <li><a class="<% if (path=='projects/vpr/index.html'){ %>active<% } %>" href="/projects/vpr/">Рома ВПР</a></li>
          <li><a class="<% if (path.match(/vpr.chords/)){ %>active<% } %>"href="/projects/vpr/chords/">Аккорды</a></li>
          <li><a class="<% if (path.match(/vpr.bio/)){ %>active<% } %>"href="/projects/vpr/bio/">Биография</a></li>
          <li><a class="<% if (path.match(/vpr.interview/)){ %>active<% } %>"href="/projects/vpr/interview/">Интервью и статьи</a></li>
          <li><a class="<% if (path.match(/vpr.links/)){ %>active<% } %>"href="/projects/vpr/links/">Ссылки</a></li>
          <li><a class="<% if (path.match(/vpr.download/)){ %>active<% } %>"href="/projects/vpr/download/">Скачать</a></li>
          <li><a class="<% if (path.match(/vpr.uo/)){ %>active<% } %>"href="/projects/vpr/uo/">Условные обозначения</a></li>
          <li><a class="<% if (path.match(/vpr.contact/)){ %>active<% } %>"href="/projects/vpr/contact/">Контакты</a></li>
          <li><a class="<% if (path.match(/vpr.thanks/)){ %>active<% } %>"href="/projects/vpr/thanks/">Спасибо</a></li>
        </ol>
      </div>

      <div class="flex-right">
        <% if (page.comments && page.displaycomments != false) { %>
        <a href="/<%- path.replace('index.html','') %>#isso-thread" title="<%- __('blog.comments-for') %>">
          <%- __('article.comments') %>
        </a>
        <% } %>
        <%- page.content %>

        <table id="chords" class="cell-border compact stripe hover order-column">
  
          <col width="25%">
          <col width="25%">
          <col width="10%">
          <col width="40%">
          <thead>
            <tr class="vpr-table-header">
              <th>Название песни</th>
              <th>Альбом/издание</th>
              <th>Год</th>
              <th>Примечания</th>
            </tr>
          </thead>

          <% site.pages.sort('title', 1).each(function(it){ %>
          <% if (it.path.indexOf('chords')>-1 && it.vprtitle) { %> 
            <tr>
              <td><a href="<%- url_for(it.path) %>"><%- it.vprtitle %></a></td>
              <td><%- it.album %></td>
              <td><%- it.year %></td>
              <td><%- it.notes %><% if (it.onlytext==true) { %>Только текст.<% } %></td>
            </tr>
          <% } %>
          <% }); %>

        </table>

        <% if (page.comments) { %>
          <%- partial('_partial/comments') %> 
        <% } %>
        <%- partial('_partial/footer') %> 
      </div>
    </div>
    <%- partial('_partial/after_footer') %>
  </div>
</body>
</html>
